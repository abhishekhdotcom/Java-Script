<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Verify Your Email</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body class="bg-gray-100 flex  flex-col items-center  min-h-screen">
        <%- include('partials/header') %>

            <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-md mt-10">
                <div class="text-center">
                    <h2 class="text-3xl font-bold text-gray-800 mb-6">Verify Your Email</h2>
                    <div class="bg-green-100 text-green-800 p-3 rounded-lg inline-block mb-6">
                        <span class="flex items-center justify-center">
                            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                    clip-rule="evenodd" />
                            </svg>
                            You are logged in
                        </span>
                    </div>
                </div>
                <div class="mb-6">
                    <p class="text-gray-700 text-center">Email: <span class="font-semibold">
                            <%= user.email %>
                        </span></p>
                    <p class="text-gray-600 text-center mt-2">Your email has not been verified yet. Please
                        verify your
                        email
                        by entering the 8-digit code or request a new verification link.</p>
                </div>
                <button type="button" onclick="resendVerifyEmail()"
                    class="w-full py-3 px-4 bg-blue-600 mb-2 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white font-semibold rounded-lg shadow-md transition duration-300">
                    <% if (!tokenExist.length) { %>
                        Send Verify Email Link
                        <% } else{%>
                            Resend Verify Email Link
                            <%} %>

                </button>
                <div>
                    <form id="verifyForm" onsubmit="return false;">
                        <label class="block text-gray-700 mb-2 text-center" for="verifyEmailToken">
                            Enter 8-Digit Verification Code:
                        </label>
                        <input type="text" id="verifyEmailToken" name="token"
                            class="w-full p-3 border border-gray-300 rounded-lg mb-4 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                            maxlength="8" placeholder="e.g., 12345678">
                        <input type="hidden" value="<%= user.email %>" name="email">
                        <button type="button" id="verifyBtn"
                            class="bg-indigo-600 text-white px-6 py-2 rounded-lg w-full hover:bg-indigo-700 transition disabled:opacity-50 disabled:cursor-not-allowed"
                            disabled>
                            Verify Code
                        </button>
                    </form>
                </div>
            </div>

            <script>
                // Send Verify Email Token Link
                async function resendVerifyEmail () {
                    const button = document.querySelector('button[onclick="resendVerifyEmail()"]');
                    button.disabled = true;
                    button.textContent = 'Sending...';

                    try {
                        const res = await fetch('/api/v1/verify/resend-email-verify-link', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            credentials: 'include'
                        });

                        if (res.ok) {
                            window.location.reload();
                        } else {
                            const data = await res.json();
                            alert(data.message || 'Failed to resend link.');
                        }
                    } catch (error) {
                        alert('An error occurred. Please try again later.');
                    } finally {
                        button.disabled = false;
                        button.textContent = 'Resend Verify Email Link';
                    }
                }


                // Verify Email Token
                async function verifyEmailLinkToken (e) {
                    e.preventDefault(); // stop default form submission (prevents logout)

                    const button = document.getElementById("verifyBtn");
                    button.disabled = true;
                    button.textContent = "Verifying...";

                    try {
                        const res = await fetch("/api/v1/verify/verify-email-token", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            credentials: "include",
                            body: JSON.stringify({
                                token: document.getElementById("verifyEmailToken").value,
                                email: document.querySelector("input[name='email']").value,
                            }),
                        });

                        const data = await res.json(); // Parse the JSON response

                        if (res.ok && data.success) {
                            window.location.href = "/api/v1/auth/profile";
                        } else {
                            alert(data.message || "Failed to verify email.");
                        }

                    } catch (err) {
                        console.error(err);
                        alert("An error occurred. Please try again later.");
                    } finally {
                        button.disabled = false;
                        button.textContent = "Verify Code";
                    }
                }

                const input = document.getElementById("verifyEmailToken");
                const button = document.getElementById("verifyBtn");

                // enable/disable button on input
                input.addEventListener("input", () => {
                    input.value = input.value.replace(/\D/g, ""); // digits only
                    button.disabled = !/^\d{8}$/.test(input.value);
                    button.classList.toggle("bg-gray-400", button.disabled);
                    button.classList.toggle("bg-blue-600", !button.disabled);
                });

                // click handler
                button.addEventListener("click", verifyEmailLinkToken);

                // handle pressing Enter key
                input.addEventListener("keypress", (e) => {
                    if (e.key === "Enter" && !button.disabled) {
                        verifyEmailLinkToken(e);
                    } else if (e.key === "Enter") {
                        e.preventDefault(); // stop accidental logout
                    }
                });
            </script>
    </body>

</html>